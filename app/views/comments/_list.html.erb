<h1>Commentaires</h1>
<div id="comments"><%= render :partial => "comments/comment" %></div>
<% if current_user %>
   <h2>Laisser un commentaire</h2>
   <% remote_form_for :comment, :url=>{:controller=>"comments", :action=>"new", :id=>@menu.id } do |f| %>
       <%= f.label :title %>:<%= f.text_field :title %><br>
       <%= f.label :comment %><br />
       <%= f.text_area "comment", :rows=>5, :cols=>35 %><br />
       <%= f.submit  "Ajouter un commentaire", :class => 'button'%>
   <% end %>
<% end %>
