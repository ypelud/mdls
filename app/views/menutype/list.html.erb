<h1>Types de menus</h1>
<table class="menu">
  <tr>  
    <th><em>Type</em></th>
  </tr>
  
<% for menutype in @menutypes %>
  <tr>
    <td><%= link_to %Q{#{menutype.name}}, :action => 'show', :id => menutype %>
        <%= link_to '(delete)', { :action => 'destroy', :id => menutype },
								:confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @menutypes %>

<div class="post-footer">	
<p class="links">
<%= link_to "Nouveau type", :action => "new" %>
</p>
</div>


