
<% $week.each do |day| %>
   <div id="cart_<%=day%>" class="cart_<%=day%>">   
      <div id="msg_cart"><%=day%></div>
      <div id="items_<%=day%>">
         <%= render :partial => "cart", :locals => { :day => day } %>
      </div>
   
      <%= drop_receiving_element "cart_#{day}", 
         :update => "items_#{day}", :url => {:controller => "choixmenu", :action => "add", :day => day},
         :accept => "menu_cart", :hoverclass => "cart-active",
         :loading => visual_effect(:appear, "indicator", :duration => 2.00),
         :complete => visual_effect(:fade, "indicator", :duration => 2.00) %>      
   </div>
<% end %>

