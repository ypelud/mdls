<div id="menu_show">
<h1><%=@menu.title%></h1>
<h2>Description </h2>
<div class="desc">
  <%= simple_format h(@menu.description) %>
</div>
<h2>Lien </h2>
<%= link_to h(@menu.url), h(@menu.url) %>
<h2>Ingredients </h2>
  <%= simple_format h(@menu.ingredients) %>  
</div> 

<div class="post-footer">	
<p class="byline">Post√© par <%= @menu.user.login %> le <%= @menu.date.to_formatted_s(:short) %> </p>
<p class="links">
   <% if current_user && (@menu.user == current_user) %>
      <%= link_to "Editer", :action => "edit", :id => @menu %> |
   <% end %>
   <% if admin? %>
      <%= link_to("Editer", {:action => "edit", :id => @menu} ) %> |
      <%= link_to("Delete",  @menu , :confirm => 'Are you sure?', :method => :delete)  %> |   
   <% end %>
   <%= link_to "Retour", :action => "index" %>|
   <%= link_to "Commentaires ("+@menu.comments.count.to_s+")", {:controller => "comments", :action => "list", :id => @menu.id},
            :remote => true %>
</p>
</div>
<div id="comment_div" style="display: none">
</div>

