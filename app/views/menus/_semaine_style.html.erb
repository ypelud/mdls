<div id="<%= @affichage %>">
<table>
   <tr class="titre">
   <% (1..@max).each do |w| %>
      <th width="<%= 100 / @max %>%"><em></em></th>
   <% end %> 
   </tr> 

   <% (1..@menus.size).each do |mn| menu=@menus.at(mn-1) %>
      <%= "<tr>" if mn % @max == 1 %>
      <td>
        <div id="mnuMidi_<%=menu.id%>" class="menu_cart">
            <div class="drag_menu"></div> 
            <div class="mnu_elt">
               <div id="libelle"><%= link_to %Q{#{menu.title}}, :controller => "menus",  :action => "show", :id => menu %></div>
               <div id="login"><%= link_to %Q{#{menu.user.login}}, {:action => "list", :user_id =>  menu.user_id} %></div>
               <%= draggable_element("mnuMidi_" + menu.id.to_s, :revert => true) %>
            </div>
         </div>
      </td>
      <% "</tr>" if mn % @max == 0 %>
   <% end %>  
</table>
</div>
