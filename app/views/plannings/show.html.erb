<h1>Semaine : <%=@planning.name %></h1>
<div id="sousmenus">
        <%= link_to "Appliquer", {:controller => "choixmenu", :action => "apply", :id => @planning.id}, :class => :button %>
        <% if (current_user && (@planning.user == current_user)) || admin? %>
			<%= link_to t("mdls.update"), "#", { :id => 'update-planning', :class => :button } %>
			<%= link_to ("Supprimer", @planning,  :confirm => 'Are you sure?', :method => :delete, :class => :button )  %> 
		<% end %>
        <%= link_to "Retour", {:action => "index"}, :class => :button  %>
</div>

<%= render :partial => 'content' %>

