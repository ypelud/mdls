<h1><%= I18n.t(:new_user_sign_up) %></h1>
<% @user.password = @user.password_confirmation = nil %>
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
 <table id="newedit">
     <thead>
         <tr>
             <th colspan="2" ></th>
         </tr>
     </thead>
     <tbody>
           <tr>
               <td align="right"><label><%= I18n.t(:login) %>:</label></td>
               <td><%= f.text_field :login %></td>
           </tr>      
           <tr>
               <td align="right"><label><%= I18n.t(:email) %>:</label></td>
               <td><%= f.text_field :email %></td>
           </tr>      
           <tr>
               <td align="right"><label><%= I18n.t(:password) %>:</label></td>
               <td><%= f.password_field :password %></td>               
           </tr>      
           <tr>
               
               <td align="right"><label><%= I18n.t(:password_confirmation) %>:</label></td>
               <td><%= f.password_field :password_confirmation %></td>
           </tr>      
           <tr>
               <td></td>
               <td><%= submit_tag I18n.t(:sign_up), :class => "button"%></td>
           </tr>
       </tbody>
   </table>
 <% end -%>
 
 <%= error_messages_for "user" %>
