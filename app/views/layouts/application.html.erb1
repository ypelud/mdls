<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>Menus de la semaine</title>
  <!--%= stylesheet_link_tag 'scaffold' %-->
  <%= stylesheet_link_tag 'pagination' %>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag :defaults %>   
</head>
<body>

<div id="container">

   <div id="content">
      <div id="content-wrapper">
         <div class="box"><div id="title"><h1>Titre</h1></div>
            <div class="top-corners"><div></div></div>
		      <div class="box-content">
             	<div class="box-content-2">
              	   <div class="box-content-3"></div>
                  <%=yield %><br/>
				   </div>  
            </div>
            <div class="bottom-corners"><div></div></div>
         </div>
      </div>
    </div>
	
    <div id="sidebar">
        <div id="sidebar-wrapper">
        <h1 class="logo"><a href="#"></a></h1>
        <%= render_component :controller => 'home', :action => 'sidebar' %>    
        </div>
   </div>
   
   <div id="rightbar">
      <div id="rightbar-wrapper">
         <div class="box"><div id="title"><h2>Mes menus</h2></div>
            <div class="top-corners"><div></div></div>
		      <div class="box-content">
             	<div class="box-content-2">
              	   <div class="box-content-3"></div>
                  <%= render_component :controller => 'choixmenu', :action => 'list' %>
               </div>  
            </div>
            <div class="bottom-corners"><div></div></div>
         </div>
      </div>
    </div>
    
    <div id="publicite">
       <div id="publicite-wrapper">
         <div class="box"><div id="title"><h2>Livre sur Amazon.fr</h2></div>
            <div class="top-corners"><div></div></div>
		      <div class="box-content">
             	<div class="box-content-2">
              	   <div class="box-content-3"></div>
                  <%= render_component :controller => 'aws', :action => 'index' %>
               </div>  
            </div>
            <div class="bottom-corners"><div></div></div>
         </div>
       </div>    
    </div>

    
    
   <%= render_component :controller => 'menu', :action => 'recupere' %>
    
</div>
    
</div>


<%= "<div id='notice'>#{flash[:notice]}</div>" if flash[:notice] %>
<% if flash[:notice] %>
   <script type="text/javascript">
      new Effect.Fade('notice', { delay: 10 });
   </script>
<% end %> 

</body>
</html>
