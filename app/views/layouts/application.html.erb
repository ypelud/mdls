<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	<title>Menus de la semaine</title>
	<link rel="shortcut icon" href="/images/icones/favicon.ico" type="image/x-icon">
	<link rel="alternate" type="application/rss+xml" title="MenusDeLaSemaine" href="/menus.rss" />
	<%= stylesheet_link_tag "pagination" %>
	<%= stylesheet_link_tag "menus" %>
	<%= stylesheet_link_tag "mdls" %>
	<%= javascript_include_tag :defaults %>   
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" type="text/javascript" charset="utf-8"/>
	<%= yield  :head %>
</head>
<body>

<!-- start header -->
<div id="top">
	<div id="menu">     
		<ul><%= render :partial => "/home/navigation" %></ul>
	</div>
	<% if admin? %>
	<div id="flags">
		<a href="/fr"><img src="/images/flags/France.png"></img></a>
		<a href="/en"><img src="/images/flags/USA.png"></img></a>
		<a href="/sp"><img src="/images/flags/Spain.png"></img></a>
		<a href="/de"><img src="/images/flags/Germany.png"></img></a>   
	</div>
	<%end%>
</div>
<div id="undertop">
	<div id="menu"><ul><%= render :partial => "/home/navigationlogin" %></ul></div>
	<div id="search"><%= render :partial => '/recherche/new' %></div>
	<div id="alerte" style="display:none;"><%= flash[:notice] %></div>
	<div id="login_div"  style="display:none;"></div>
</div>
<div id="header">
	<div id="logo">
		<div class="left">
			<h1><a href="#">Menus<span class="green">de</span>la<span class="gray">semaine</span></a></h1>	
			<h2>les  menus  sans  peine...</h2>     
		</div>
		<div class="right">
			<%= render :partial => "/shared/pub1" %>
		</div>
	</div>
</div>
<!-- end header -->

<!-- start page -->
<div id="page"> 	
	<!-- start leftbar -->   
	<div id="leftbar">     
		<ul>
			<li class="box">
				<h2><%=t("mdls.my_menus")%></h2>
				<%= render :partial => '/choixmenu/menu_list' %>
			</li>
			<li style="display:none;" id="search">
				<h2><%=t("mdls.search")%></h2>
				<% render :partial => '/shared/searchGoogle'%>
			</li>
			<li class="box">
				<h2><%=t("mdls.keywords")%></h2>
				<%= render :partial => "/tags/tags_list" %>   
			</li>
			<li class="box">
				<h2><%=t("mdls.last_comments")%></h2>
				<%= render :partial => "/comments/list5" %>   
			</li>
		</ul>
	</div>
	<!-- end leftbar -->
	<!-- start rightbar -->
	<div id="rightbar">
		<%= render :partial => '/shared/pub2'%>
	</div>
	<!-- end rightbar -->	
	<!-- start content -->
	<div id="content">
		<%=yield %>
	</div>
	<!-- end content -->
	

	<div style="clear: both;">&nbsp;</div>
</div>
<!-- end page -->

<!-- start footer -->
<div id="footer">
	<p id="legal">(c) 2008 <strong>Menusdelasemaine</strong>. </p>
</div>
<!-- end footer -->
</body>
</html>

<%= if flash[:notice]
	update_page_tag do |page|
		page.show("alerte") 
		page.visual_effect(:highlight, "alerte")
		page.delay(4.0) do
			page.hide("alerte")
		end
	end
end
%>
