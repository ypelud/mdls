<h1>Contact</h1>

<div>
	<div id="sousmenus">
		<%= link_to t(:envoyer), '#', :class => :button %>
	</div>


<% form_tag :action => "sendmail" do %>
<div id='sujet'>
<div class='left'><label for="email_subject"><%= t('sujet') %> : </label></div>
<div class='left'><%= text_field "email", "subject" %></div>
</div>

<%= text_area "email", "message", :size => "80x20" %>
<%= raw recaptcha_tags %>
<%= submit_tag "Envoyer", :class => 'button hidden' %>

<% end %>

<script type='text/javascript'>
	$(document).ready(function() {
		CKEDITOR.replace( 'email[message]');
	})
</script>