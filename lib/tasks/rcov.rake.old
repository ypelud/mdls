  #  task :all => [:unit, :functional]
  Rcov::RcovTask.new(:all) do |rcov|
    rcov.pattern    = 'spec/**/*_spec.rb'
    rcov.output_dir = 'tmp/rcov'
    rcov.verbose    = false
    rcov.rcov_opts << '--exclude "spec/,gems/,/Library/*" --rails'
  end

